{
  "name": "freezlet",
  "productName": "FREEZLET",
  "version": "1.0.0",
  "description": "Desktop quiz application with gamified learning mode built on Electron",
  "license": "MIT",
  "author": {
    "name": "Gary938",
    "email": "gary938@users.noreply.github.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Gary938/FREEZLET.git"
  },
  "bugs": {
    "url": "https://github.com/Gary938/FREEZLET/issues"
  },
  "homepage": "https://github.com/Gary938/FREEZLET#readme",
  "keywords": [
    "electron",
    "quiz",
    "learning",
    "education",
    "flashcards",
    "desktop-app",
    "gamification"
  ],
  "type": "module",
  "main": "Main/mainHub.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "check-api": "node Main/Utils/checkApiConsistency.js",
    "build": "webpack --config webpack.renderer.config.cjs && webpack --config webpack.preload.config.cjs",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "postinstall": "electron-builder install-app-deps",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "chalk": "^5.4.1",
    "i18next": "^25.7.2"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/plugin-transform-runtime": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@babel/runtime": "^7.27.6",
    "babel-loader": "^10.0.0",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "node-polyfill-webpack-plugin": "^4.1.0",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "url": "^0.11.4",
    "util": "^0.12.5",
    "webpack": "^5.99.5",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^6.0.1"
  },
  "build": {
    "appId": "com.gary938.freezlet",
    "productName": "FREEZLET",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "Main/**/*",
      "UI/**/*",
      "Preload/**/*",
      "Locales/**/*",
      "CSS/**/*",
      "dist/**/*",
      "index.html",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "Tests",
        "to": "Tests",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "Progress",
        "to": "Progress",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "MyBackground",
        "to": "MyBackground",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.education",
      "icon": "build/icon.png"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Education",
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico"
    },
    "appImage": {
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    }
  },
  "sideEffects": [
    "*.css"
  ]
}
